<UserControl x:Class="DiagramControls.PieLegendItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:DiagramControls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Orientation="Horizontal" Margin="4,6,4,0" 
                MouseEnter="Item_MouseEnter"
                MouseLeave="Item_MouseLeave">
        <Border x:Name="ItemColor"
                Height="30"
                Width="30"
                BorderBrush="Black"
                MaxHeight="31" MaxWidth="31"
                HorizontalAlignment="Center"
                BorderThickness="0"/>
        <TextBlock x:Name="ItemName"
                   Margin="4,0,4,0"
                   HorizontalAlignment="Center" 
                   VerticalAlignment="Center"
                   Foreground="Black"
                   FontSize="18"/>
    </StackPanel>
</UserControl>
